<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/black</item>
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="team_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/team_name_size</item>
    </style>

    <style name="score">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:background">@drawable/score_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/score_size</item>
    </style>

    <style name="hand_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/hand_height</item>
        <item name="android:gravity">center</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
    </style>

    <style name="buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_in</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

</resources>
